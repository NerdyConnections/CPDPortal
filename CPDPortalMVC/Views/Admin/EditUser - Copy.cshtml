@model CPDPortalMVC.Models.UserModel
@using CPDPortalMVC.Util
@{
    Layout = null;
}


<style>
    input[type=text].form-control, input[type=password].form-control {
        background: transparent;
        border: 1px solid #808080;
    }



    .form-control {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.428571429;
        color: #555555;
        vertical-align: middle;
        background: none;
        border-radius: 4px;
    }

    label {
        color: black;
    }

    .field-validation-error {
        color: crimson;
    }
</style>


