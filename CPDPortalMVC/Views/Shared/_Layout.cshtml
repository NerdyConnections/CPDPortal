@using CPDPortalMVC.Util;
@using CPDPortalMVC.Models;

@{
    UserModel user = UserHelper.GetLoggedInUser();
    string showReport = "none";
    if (user != null && (user.UserType.Equals("5") || user.UserType.Equals("7"))) //only for admin and head office
    {
        showReport = "inline";
    }
}


<!DOCTYPE html>
<html>
<head>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
 
    <link href="https://fonts.googleapis.com/css?family=BenchNine" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
    
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/Site.css?t=34535" rel="stylesheet" />
 
    <script src="~/Scripts/jquery-1.10.2.js"></script>
   
    <script src="~/Scripts/bootstrap.js"></script>


    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
       $('.btn-back').on('click', function (e) {
        window.history.back();
        });
    </script> 

    
</head>
<body style="background-image:url('/Images/notebook1st.jpg');">
    <div class="overlay"></div>
    <header>

        <div class="navbar navbar-inverse overlay-z2">
            <!--navbar-fixed-top-->
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>

                            <div id="logo">
                                <div  class="logo-img">
                                    <img src="@Session["LogoUrl"]" width="137" height="35" />
                                </div>
                              
                                <div class="logo-txt-sub">CPD Portal</div>
                                <div class="logo-txt-welcome">Welcome  @UserHelper.GetLoggedInUser().FirstName @UserHelper.GetLoggedInUser().LastName</div>
                            </div>
                        </div>

                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav float-right" style="float: right">
                                <li><a href="#">Help Centre</a></li>
                                <li style="display:@showReport"><a href="/Home/Reports">Reporting</a></li>
                                <li><a href="mailto:amgen@ccpdhm.com">Contact Us</a></li>
                                <li>@Html.ActionLink("Log Out", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "ctrlLogOut" })</li>



                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </header>
        <section>

            <div class="container  overlay-z2">
                @RenderBody()
            </div>
        </section>



        <footer>
            <div class="container overlay-z2 footer">
                <div class="row">
                    <div class="col-sm-12 col-sm-12 col-md-6">
                        <div class="logo-img-ftr">
                            <object class="logo-img-ftr-svg" type="image/svg+xml" data="/Images/CHRClogos_mer.svg"></object>
                        </div>
                    </div>

                    <div class="hidden-xs  col-sm-12 col-md-2">&nbsp;</div>
                    <div class="col-xs-12  col-sm-12 col-md-4">
                        <span style="margin-right: 20px">https://amgen.ccpdhm.com</span>
                        <br class="r-break" />
                        <a href="mailto:info@ccpdhm.com" title="info@ccpdhm.com" style="margin-right: 20px">info@ccpdhm.com</a>
                        <br class="" />
                        110 Sheppard Avenue East, Suite 309,
                        <br class="r-break" />
                        North York, Ontario,
                        <br class="r-break" />
                        Canada, M2N 6Y8
                        <br class="r-break" />
                        <br />
                    </div>
                </div>
            </div>
        </footer>




        @RenderSection("Scripts", required: false)
</body>
</html>
