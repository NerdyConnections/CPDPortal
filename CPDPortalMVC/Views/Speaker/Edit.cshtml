@model CPDPortalMVC.Models.SpeakerModel
@using CPDPortalMVC.Util
@{
    Layout = null;
}


<style>
    input[type=text].form-control, input[type=password].form-control {
        background: transparent;
        border: 1px solid #808080;
    }



    .form-control {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.428571429;
        color: #555555;
        vertical-align: middle;
        background: none;
        border-radius: 4px;
    }

    label {
        color: black;
    }

    .field-validation-error {
        color: crimson;
    }

   
       
  
</style>


            
    
<!--don't touch these files, they are required at this location (not at head) for client side javascript to work-->
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script src="~/Scripts/bootstrap.js"></script>


<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<!--end of client side javascript-->

@using (Html.BeginForm("Edit", "Speaker", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(Model => Model.user_id)
   
                   



                    <div>
                        <div class="row">
                            <div class="col-md-12">
                                <!--<div class="lead1" style="color: #534d4d"></div>-->
                            </div>
                        </div>





                    
                        <div class="row"></div>
                        <div class="row">
                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="First Name">First Name: </label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                               
                            </div>
                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Last Name">Last Name:</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Specialty">Specialty:</label>
                                @Html.EditorFor(model => model.Specialty, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                        </div>

                        <div class="row">

                            <div class="form-group form-group-sm col-sm-2">
                                <label class="" title="Clinic Name">Clinic Name:  </label>
                                @Html.EditorFor(model => model.ClinicName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>


                            <div class="form-group form-group-sm col-sm-4">
                                <label class="" title="Address">Address:</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group form-group-sm col-sm-2">
                                <label class="" title="City">City:</label>
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group form-group-sm col-sm-4">
                                <label class="" title="province">Province: </label><br/>
                                @Html.DropDownListFor(model => model.Province, new SelectList(AppData.GetProvinceList(), "Value", "Text"), "Please select a province")
                            </div>

                           </div>
                        <div class="row">
                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Postal Code">Postal Code:</label>
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Phone">Phone:</label>
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="re-enter password">Fax:</label>
                                @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Email">Email:</label>
                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            


                        </div>
                        <div class="row">
                            <div class="form-group form-group-sm col-sm-3">
                                <label class="" title="Therapeutic Area">Therapeutic Area:</label>
                                @Html.EditorFor(model => model.TherapeuticArea, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                          

                        </div>
                        

                            <div class="row">

                                <div class="form-group form-group-sm col-sm-4">
                                    <label class="" title="Comments">Comments:</label>
                                    @Html.TextAreaFor(model => model.Comment, 2, 40, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>


                   
}
